def predict_next_val(seq):
    seq_tower=[seq]
    while not all(seq_tower[-1]==0):
        seq_tower.append(diff(seq_tower[-1]))

    val=cumsum([seq[-1] for seq in seq_tower][::-1])[-1]
    return val    


